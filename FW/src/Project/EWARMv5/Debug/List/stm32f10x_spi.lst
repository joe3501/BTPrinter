    797            /* Check the parameters */
    798            assert_param(IS_SPI_ALL_PERIPH(SPIx));
    799            assert_param(IS_SPI_I2S_GET_IT(SPI_I2S_IT));
    800          
    801            /* Get the SPI/I2S IT index */
    802            itpos = (u16)((u16)0x01 << (SPI_I2S_IT & (u8)0x0F));
